<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="vn.com.z11.z11app.ProfileActivity">
    <include layout="@layout/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:src="@drawable/wallpaper1"
            android:id="@+id/img_avt"
            android:layout_height="80dp" />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:src="@drawable/name_icon"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:text="20000"
                android:layout_gravity="center"
                android:id="@+id/txtv_name"
                android:layout_weight="3"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:src="@drawable/email_icon"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:text="20000"
                android:layout_gravity="center"
                android:id="@+id/txtv_email"
                android:layout_weight="3"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:src="@drawable/gender_icon"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:text="name"
                android:layout_gravity="center"
                android:id="@+id/txtv_gender"
                android:layout_weight="3"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:src="@drawable/coin"
                android:layout_gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:text="20000"
                android:layout_gravity="center"
                android:id="@+id/txtv_coin"
                android:layout_weight="3"
                />
        </TableRow>

    </TableLayout>


</LinearLayout>
