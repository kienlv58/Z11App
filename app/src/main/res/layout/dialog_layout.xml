<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_noti"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/BlackColor"
        android:text="Muc do hoan thanh"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/progess"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progessbar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:progress="20"
            android:progressBackgroundTint="#e2c7ef"
            android:progressTint="#44ff33" />

        <TextView
            android:id="@+id/txtv_progess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="20%"
            android:textColor="@color/BlackColor" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_total_qs"
        android:layout_marginTop="2dp"
        android:gravity="left"
        android:textColor="@color/BlackColor"
        android:text="Tong so cau :20"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_total_wrong"
        android:layout_marginTop="2dp"
        android:gravity="left"
        android:textColor="@color/BlackColor"
        android:text="So lan tra loi sai :10"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_review"
        android:layout_marginTop="2dp"
        android:gravity="left"
        android:textColor="@color/BlackColor"
        android:text="Danh gia : trung binh"/>

</LinearLayout>