<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:src="@drawable/wallpaper1"
        android:id="@+id/img_avt"
        android:layout_height="80dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_name"
        android:text="name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtv_email"
        android:text="email"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.8"
        android:stepSize="1.0"
        android:id="@+id/rating_bar"
        android:progressTint="@color/OrganColor"
        android:secondaryProgressTint="@color/OrganColor"
        android:backgroundTint="@color/OrganColor"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_below="@id/txtv_description"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/BlackColor"
        android:layout_height="2dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtv_title"
        android:layout_margin="5dp"
        android:text="Title"
        android:textColor="@color/BlackColor"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtv_description"
        android:layout_margin="5dp"
        android:text="description"
        android:textColor="@color/BlackColor"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:id="@+id/my_rate"
            android:progressTint="@color/OrganColor"
            android:secondaryProgressTint="@color/OrganColor"
            android:backgroundTint="@color/OrganColor"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_below="@id/txtv_description"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="rate"
            android:id="@+id/btn_rate"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:text="unlock"
            android:id="@+id/btn_unlock"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>